<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaPost"
    android:background="@drawable/newbackgroundjk">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/adaPostProfilesView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/ada_post_view_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.184" />

        <View
            android:id="@+id/adaPostTitleView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/text_input_layout_background"
            app:layout_constraintBottom_toTopOf="@+id/adaPostProfilesView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.675" />

        <TextView
            android:id="@+id/fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ada Post"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostTitleView"
            app:layout_constraintEnd_toEndOf="@+id/adaPostTitleView"
            app:layout_constraintStart_toStartOf="@+id/adaPostTitleView"
            app:layout_constraintTop_toTopOf="@+id/adaPostTitleView" />

        <Button
            android:id="@+id/QRcamOpen"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="QRcamOpen"
            android:text="Button"
            app:icon="@drawable/icons8_camera_100"
            app:iconSize="32dp"
            app:iconTint="#DF8104"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostTitleView"
            app:layout_constraintEnd_toStartOf="@+id/fragmentTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/adaPostTitleView"
            app:layout_constraintTop_toTopOf="@+id/adaPostTitleView" />

        <Button
            android:id="@+id/Sponsors"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:backgroundTint="#FFFFFF"
            android:text="Button2"
            app:icon="@drawable/icons8_search_document_100"
            app:iconSize="32dp"
            app:iconTint="#DF8104"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostTitleView"
            app:layout_constraintEnd_toStartOf="@+id/fragmentTitle"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toEndOf="@+id/QRcamOpen"
            app:layout_constraintTop_toTopOf="@+id/adaPostTitleView" />

        <Button
            android:id="@+id/myPosts"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:backgroundTint="#FFFFFF"
            android:text="Button"
            app:icon="@drawable/icons8_direct_message_100"
            app:iconSize="32dp"
            app:iconTint="#DF8104"
            app:layout_constraintBottom_toBottomOf="@+id/adaPostTitleView"
            app:layout_constraintEnd_toEndOf="@+id/adaPostTitleView"
            app:layout_constraintHorizontal_bias="0.838"
            app:layout_constraintStart_toEndOf="@+id/fragmentTitle"
            app:layout_constraintTop_toTopOf="@+id/adaPostTitleView" />

        <View
            android:id="@+id/view"
            android:layout_width="378dp"
            android:layout_height="455dp"
            android:background="@drawable/ada_post_posts_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adaPostProfilesView"
            app:layout_constraintVertical_bias="0.147" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="353dp"
            android:layout_height="288dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>