<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profil Resmi için ImageView -->
    <ImageView
        android:id="@+id/imageViewProfile2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/buben"
        android:scaleType="centerCrop"
        android:background="@drawable/newbackgroundjk"
    />

    <!-- Yükleme Göstergesi için ProgressBar -->

    <!-- Veri Listesi için RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageViewProfile2"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="72dp"
        android:layout_height="71dp"
        android:layout_marginStart="81dp"
        android:layout_toEndOf="@+id/imageViewProfile2"
        android:src="@drawable/exitbutton" />

</RelativeLayout>
